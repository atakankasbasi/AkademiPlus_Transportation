@model AkademiPlus_Transportation.Models.tbl_Admin
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Panel.cshtml";
}

<h2>Profil Bilgileri Güncelleme</h2>

<form method="post">
    <label>Kullanıcı Adı:</label>
    @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
    </br>
    <label>Kullanıcı Şifre:</label>
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
    </br>
    <label>Kullanıcı Rolü:</label>
    @Html.TextBoxFor(x => x.AdminRole, new { @class = "form-control" })
    </br>
    <button class="btn btn-dark">Güncelle</button>
</form>

