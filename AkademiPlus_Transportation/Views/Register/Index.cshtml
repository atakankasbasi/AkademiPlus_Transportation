@model AkademiPlus_Transportation.Models.tbl_Admin
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Panel.cshtml";
}

<h2>Yeni Admin Girişi</h2>

<form method="post">
    <label>Kullanıcı Adı:</label>
    @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
    <br />
    <label>Kullanıcı Şifre:</label>
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
    <br />
    <label>Kullanıcı Rol:</label>
    @Html.TextBoxFor(x => x.AdminRole, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Yeni Admin Ekle</button>
</form>

